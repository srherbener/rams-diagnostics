#!/usr/bin/env bash
#
# script to create figures for ATEX paper

Jsize="1200x900"

echo "Figure 1: ATEX sounding"
montage -tile 1x1 -geometry ${Jsize}+2+100 \
 InitialSounding.jpg \
 Figure1.jpg

echo "Figure 2: Bar graphs, CF and CD, CCN only"
montage -tile 2x2 -geometry ${Jsize}+2+100 \
 cf_start_bars.jpg \
 cf_end_bars.jpg \
 cd_start_bars.jpg \
 cd_end_bars.jpg \
 Figure2.jpg

