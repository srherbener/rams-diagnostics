# pts_cloud_d_SC_LC_TCS_SD_C2000.jpg \
# Figure5.jpg

# Figure 5: storm core: cloud num conc in first column, cloud mean diam in second column
echo "Figure 5"
montage -tile 1x2 -geometry ${Jsize}+2+100 \
 pts_cloud_cm3_diff_SC_LC_TCS_SD_C2000.jpg \
 pts_cloud_d_diff_SC_LC_TCS_SD_C2000.jpg \
 Figure5.jpg

# Figure 6: storm core: latent heat in first column, w in second column
echo "Figure 6"
montage -tile 2x3 -geometry ${Jsize}+2+100 \
 prs_lh_tott_diff_SC_SS_TCS_SD_C2000.jpg \
 prs_w_diff_SC_SS_TCS_SD_C2000.jpg \
 prof_lh_tott_SC_SS.jpg \
 prof_w_SC_SS.jpg \
 prof_lh_tott_diff_SC_SS.jpg \
 prof_w_diff_SC_SS.jpg \
 Figure6.jpg

# Figure 7: storm core: relative vorticity
echo "Figure 7"
montage -tile 1x3 -geometry ${Jsize}+2+100 \
 prs_relvortz_rvz1em4_SC_SS_TCS_SD_C0100.jpg \
