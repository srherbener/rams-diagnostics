############ PLOT DATA #################
PlotData: VtXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  speed_t, m/s
  /all_ps_speed_t DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 1 0
End
  
PlotData: VtXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  speed_t, m/s
  /all_s_speed_t DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 1 0
End
  
############ PLOT AXES #################
PlotAxes: VtXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 8 linear [_] {_}
  # z axis - speed_t - m/s
  Vt m@s^-^1 0 15 linear [_] {_}
End

