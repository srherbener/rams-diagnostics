############ PLOT DATA #################
# latent heat/cool data is in K per 30 minutes since
# RAMS files are saved every 30 minutes. To covert to
# K/h multiply by 2.

PlotData: LhvHeatXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  lhv_heat, K/hr
  /all_ps_lhv_heat DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 2 0
End
  
PlotData: LhvHeatXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  lhv_heat, K/hr
  /all_s_lhv_heat DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 2 0
End
  
PlotData: LhfHeatXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  lhf_heat, K/hr
  /all_ps_lhf_heat DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 2 0
End
  
PlotData: LhfHeatXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  lhf_heat, K/hr
  /all_s_lhf_heat DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 2 0
End
  
############ PLOT AXES #################
PlotAxes: LhvHeatXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 15 linear [_] {_}
  # z axis - lhv_heat - K/hr
  LHV@Heating K@h^-^1 0 20 linear [_] {_}
End

PlotAxes: LhfHeatXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 15 linear [_] {_}
  # z axis - lhv_heat - K/hr
  LHF@Heating K@h^-^1 0 0.5 linear [_] {_}
End

