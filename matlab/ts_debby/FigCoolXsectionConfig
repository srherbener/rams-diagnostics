############ PLOT DATA #################
# latent heat/cool data is in K per 30 minutes since
# RAMS files are saved every 30 minutes. To covert to
# K/h multiply by 2.

PlotData: LhvCoolXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  lhv_cool, K/hr
  /all_ps_lhv_cool DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 2 0
End
  
PlotData: LhvCoolXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  lhv_cool, K/hr
  /all_s_lhv_cool DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 2 0
End
  
PlotData: LhfCoolXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  lhf_cool, K/hr
  /all_ps_lhf_cool DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 2 0
End
  
PlotData: LhfCoolXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:36) 1e-3 0
  # z data -  lhf_cool, K/hr
  /all_s_lhf_cool DIAGS/storm_xsections_<CASE>.h5 (:,1:36) 2 0
End
  
############ PLOT AXES #################
PlotAxes: LhvCoolXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 8 linear [_] {_}
  # z axis - lhv_cool - K/hr
  LHV@Cooling K@h^-^1 -10 0 linear [_] {_}
End

PlotAxes: LhfCoolXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 8 linear [_] {_}
  # z axis - lhv_cool - K/hr
  LHF@Cooling K@h^-^1 -0.5 0 linear [_] {_}
End

