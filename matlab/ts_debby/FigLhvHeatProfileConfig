############ PLOT DATA #################
# RAMS files are saved on 30 minute intervals, meaning
# that the values in them are heating rates in units
# of K/30minutes. Multiply the heating rates by 2 in
# order to make the units K/h.
PlotData: LhvHeatPreSalLine 2
  # x data - lhv_heat mix ratio, K/h
  /ps_core_lhv_heat DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhvHeatSalLine 2
  # x data - lhv_heat mix ratio, K/h
  /s_core_lhv_heat DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhvHeatDiffPreSalLine 2
  # x data - lhv_heat mix ratio, K/h
  /ps_core_lhv_heat_diff DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhvHeatDiffSalLine 2
  # x data - lhv_heat mix ratio, K/h
  /s_core_lhv_heat_diff DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
