PlotData: Dust2XsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  d2_mass, g/kg
  /ps_d2_mass DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 1 0
End
  
