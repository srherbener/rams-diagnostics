############ PLOT DATA #################
PlotData: UpXsectionPreSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  updraft, m/s
  /all_ps_updraft DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 1 0
End
  
PlotData: UpXsectionSalContour 3
  # x data - radius, km
  /x_coords DIAGS/storm_xsections_<CASE>.h5 @ 1e-3 0
  # y data - height, km
  /z_coords DIAGS/storm_xsections_<CASE>.h5 (1:44) 1e-3 0
  # z data -  updraft, m/s
  /all_s_updraft DIAGS/storm_xsections_<CASE>.h5 (:,1:44) 1 0
End
  
############ PLOT AXES #################
PlotAxes: UpXsectionAxes 3
  14 2 [0.025_0.025]
  # x axis - radius
  Radius km 0 500 linear [100_300_500] {_}
  # y axis - utc time
  Height km 0 15 linear [_] {_}
  # z axis - updraft - m/s
  Updraft m@s^-^1 0 0.3 linear [_] {_}
End

