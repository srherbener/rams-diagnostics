############ PLOT DATA #################
# RAMS files are saved on 30 minute intervals, meaning
# that the values in them are heating rates in units
# of K/30minutes. Multiply the heating rates by 2 in
# order to make the units K/h.
PlotData: LhfHeatPreSalLine 2
  # x data - lhf_heat mix ratio, K/h
  /ps_core_lhf_heat DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhfHeatSalLine 2
  # x data - lhf_heat mix ratio, K/h
  /s_core_lhf_heat DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhfHeatDiffPreSalLine 2
  # x data - lhf_heat mix ratio, K/h
  /ps_core_lhf_heat_diff DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
PlotData: LhfHeatDiffSalLine 2
  # x data - lhf_heat mix ratio, K/h
  /s_core_lhf_heat_diff DIAGS/storm_profiles_<CASE>.h5 @ 2 0
  # y data - height, km
  /z_coords DIAGS/storm_profiles_<CASE>.h5 @ 1e-3 0
End
  
