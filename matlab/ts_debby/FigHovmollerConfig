############ PLOT DATA #################
PlotData: PcprateHovContour 3
  # x data - radius, km
  /x_coords DIAGS/hist_meas_pcprate_<CASE>.h5 @ 1e-3 0
  # y data - sim time in hours
  /t_coords DIAGS/hist_meas_pcprate_<CASE>.h5 @ 2.7778e-4 -42
  # z data -  precip rate, mm/h
  /pcprate_ts DIAGS/hist_meas_pcprate_<CASE>.h5 @ 1 0
End
  
PlotData: VintCondHovContour 3
  # x data - radius, km
  /x_coords DIAGS/hist_meas_vint_cond_<CASE>.h5 @ 1e-3 0
  # y data - sim time in hours
  /t_coords DIAGS/hist_meas_vint_cond_<CASE>.h5 @ 2.7778e-4 -42
  # z data -  vertically integrated condensate, mm
  /vint_cond_ts DIAGS/hist_meas_vint_cond_<CASE>.h5 @ 1 0
End
  
PlotData: UpDraftCoreHovContour 3
  # x data - sim time in hours
  /t_coords DIAGS/hist_meas_w_<CASE>.h5 @ 2.7778e-4 -42
  # y data - height, km
  /z_coords DIAGS/hist_meas_w_<CASE>.h5 @ 1e-3 0
  # z data -  updraft speed, m/s
  /core_updraft_ts DIAGS/hist_meas_w_<CASE>.h5 @ 1 0
End
  
PlotData: UpDraftRbandHovContour 3
  # x data - sim time in hours
  /t_coords DIAGS/hist_meas_w_<CASE>.h5 @ 2.7778e-4 -42
  # y data - height, km
  /z_coords DIAGS/hist_meas_w_<CASE>.h5 @ 1e-3 0
  # z data -  updraft speed, m/s
  /rb_updraft_ts DIAGS/hist_meas_w_<CASE>.h5 @ 1 0
End
  
