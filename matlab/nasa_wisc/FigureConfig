#
# Instructions for building figures
#

Figure: FigRadMeas 3
  TestCases
  [2_2]
  Plots/FigRadMeas_<CASE>.jpg
  EqMeasPanel 1
  EqMeasPanel 2
  EqMeasPanel 3
End 

CaseSet: TestCases 2
  RCE_BASE
  RCE_MATT
End

FigPanel: EqMeasPanel
  EqMeasPset
  EqMeasAxes 1 1
  none 5
  PANEL:a
  SouthEast 20
End

PlotSet: EqMeasPset 2
  ThfLine  THF     2 blue   - 0 1 1 
  QradLine Q_r_a_d 2 orange - 0 1 1
End

PlotData: ThfLine
  # x data - sim time in days
  /t_coords        DIAGS/eq_meas_<CASE>.h5 @ 1 0
  # y data - thermal heat flux in W/m^2
  /therm_heat_flux DIAGS/eq_meas_<CASE>.h5 @ 1 0
End
  
PlotData: QradLine
  # x data - sim time in days
  /t_coords     DIAGS/eq_meas_<CASE>.h5 @ 1 0
  # y data - radiative flux divergence in W/m^2
  /rad_flux_div DIAGS/eq_meas_<CASE>.h5 @ 1 0
End

PlotAxes: EqMeasAxes 25 2 [0.025_0.025]
  # x axis - sim time in days
  Simulation@Time d 0 80 linear [_]
  # y axis - flux in W/m^2
  Flux W@m^-^2 0 120 linear [_]
End
